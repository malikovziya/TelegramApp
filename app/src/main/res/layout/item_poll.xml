<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_message_other"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Poll Question -->
    <TextView
        android:id="@+id/pollQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Which option do you prefer?"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Poll Options -->
    <RadioGroup
        android:id="@+id/pollOptionsGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- RadioButtons, percentages, and progress bars will be added dynamically -->
    </RadioGroup>

    <!-- Vote Count -->
    <TextView
        android:id="@+id/voteCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:text="0 votes"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <!-- Reactions -->
    <LinearLayout
        android:id="@+id/reactionLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/reactionThumbsUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/react_bg"
            android:padding="4dp"
            android:text="👍 12"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>